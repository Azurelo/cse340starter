<h1><%= title %></h1>

<h2>Welcome <%= accountData.firstName %></h2>
<% if (errors && errors.length > 0) { %>
  <div class="error">
      <% errors.forEach((error) => { %>
          <p><%= error.msg %></p>
      <% }) %>
  </div>
<% } %>

<% if (accountData.accountType === "Employee" || accountData.accountType === "Admin") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inventory/management">Go to Inventory Management</a></p>
<% } %>
<p><%= accountData.id %></p>

<!-- Link to update account information -->
<a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
