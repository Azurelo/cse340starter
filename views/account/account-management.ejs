<h1><%= title %></h1>

<h2>Welcome <%= accountData.account_firstname %></h2>
<% if (errors && errors.length > 0) { %>
  <div class="error">
      <% errors.forEach((error) => { %>
          <p><%= error.msg %></p>
      <% }) %>
  </div>
<% } %>

<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv">Go to Inventory Management</a></p>
<% } %>
<!-- <p><%= accountData.account_id %></p> -->
<h3>Account Management</h3>
<!-- Link to update account information -->
<a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>

<h2>Your Reviews</h2>

<% if (reviews.length) { %>
    <ul>
        <% reviews.forEach(review => { %>
            <li>
                <%= review.review_text %> 
                <form action="/review/edit" method="POST">
                    <input type="hidden" name="review_id" value="<%= review.review_id %>">
                    <textarea name="review_text"><%= review.review_text %></textarea>
                    <button type="submit">Update</button>
                </form>
                <a href="/review/delete/<%= review.review_id %>">Delete</a>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p>You haven't written any reviews yet.</p>
<% } %>
